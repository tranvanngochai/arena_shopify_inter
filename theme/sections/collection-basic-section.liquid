<div class="container collection__basic{% if section.settings.style == 'style_2' %}-style_2{% endif %}">
    <img class="image_full" src="{{ section.settings.image | img_url : 'master' }}" alt="" >
    {%- if section.settings.show_image_additional == true -%}
        <img class="image_additional" src="{{ section.settings.image_additional | img_url : 'master' }}" alt="" >
    {%- endif -%}
    <div class="collection__basic-caption" style="background-color: {{section.settings.background_color}}">
        <div class="collection__basic-caption--content">
            <p>{{section.settings.content}}</p>
        </div>
        <div class="collection__basic-caption--heading">
            {{section.settings.heading}}
        </div>
        <div class="collection__basic-caption--title">
            <p>{{section.settings.title}}</p>
        </div>
        <div class="collection__basic-caption--comment">
            {{section.settings.comment}}
        </div>
        <div class="collection__basic-caption--comment--takethislook">
            <a href="">{{section.settings.takethislook}}</a>
            
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" clip-rule="evenodd" d="M10 0C4.47715 0 0 4.47715 0 10C0 15.5228 4.47715 20 10 20C15.5228 20 20 15.5228 20 10C20 4.47715 15.5228 0 10 0ZM10.0001 18.6364C5.2304 18.6364 1.36377 14.7697 1.36377 9.99999C1.36377 5.23026 5.2304 1.36363 10.0001 1.36363C14.7699 1.36363 18.6365 5.23026 18.6365 9.99999C18.6365 12.2905 17.7266 14.4872 16.107 16.1068C14.4873 17.7265 12.2906 18.6364 10.0001 18.6364Z" fill="#494F56"/>
                <path fill-rule="evenodd" clip-rule="evenodd" d="M9.16372 5.8545C8.89507 5.60418 8.47644 5.61156 8.21679 5.87121C7.95714 6.13086 7.94976 6.54949 8.20008 6.81814L11.2546 9.87268L8.20008 12.9272C7.94976 13.1959 7.95714 13.6145 8.21679 13.8742C8.47644 14.1338 8.89507 14.1412 9.16372 13.8909L13.1819 9.87268L12.2183 8.90905L9.16372 5.8545Z" fill="#494F56"/>
            </svg>
            
        </div>
    </div>
</div>






{% schema %}
{
    "name": "Collection basic section",
    "settings": [
        {
            "type": "radio",
            "id": "style",
            "options": [
                { "value": "style_1", "label": "Style 1"},
                { "value": "style_2", "label": "Style 2"}
            ],
            "label": "Style"
        },
        {
            "type": "image_picker",
            "label": "Image",
            "id": "image"
        },
        {
            "type": "image_picker",
            "label": "Image",
            "id": "image_additional"
        },
        {
            "type": "checkbox",
            "id": "show_image_additional",
            "default": false,
            "label": "Show Image Additional"
        },
        {
            "type": "text",
            "id": "content",
            "label": "Content",
            "info": "content"
        },
        {
            "type": "richtext",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "textarea",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "richtext",
            "id": "comment",
            "label": "Comment"
        },
        {
            "type": "text",
            "id": "takethislook",
            "label": "Take This Look"
        },
        {
            "type": "color",
            "id": "background_color",
            "label": "Background Color Caption",
            "default": "#fff"
        }

    ],
    "blocks":[
       
        
    ],
    "presets": [
        {
            "category": "Advanced layout",
            "name": "Collection basic section"
        }
    ]
}
{% endschema %}